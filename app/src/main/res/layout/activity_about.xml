<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01CBC6 "
    tools:context="com.example.sangam0621.translate.AboutActivity">

    
    



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us "
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="120dp"
        android:textAlignment="center"
        android:id="@+id/language_translator_bold"
        android:textSize="30dp"
        android:textColor="#000000 "/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txt1"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/language_translator_bold"
        android:textColor="#000000 "
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="It is a free multilingual machine translation service developed by Sangam Sharma, to translate text.Currently this App is available only for Android Platform.This App Supports upto 90 languages."/>
<TextView
    android:layout_width="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content"
    android:text="Developer Contact"
    android:layout_below="@id/txt1"
    android:layout_marginLeft="90dp"
    android:textSize="25dp"
    android:textStyle="bold"
    android:textColor="#000000 "
    android:layout_marginRight="50dp"
    android:id="@+id/developer_contact"

    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/developer_contact"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:text="Email"
        android:textColor="#000000 "
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/email_btn"
        android:textSize="25dp"
        android:layout_marginRight="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="sangam.as136@gmail.com"
        android:textSize="20dp"
        android:id="@+id/adress_email"
        android:layout_below="@id/email_btn"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:textColor="#0000FF "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adress_email"
        android:drawableLeft="@drawable/github"

        android:text="GitHub"
        android:textColor="#000000 "
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:id="@+id/github"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://github.com/sangamsharma6"
        android:id="@+id/igithub"
        android:layout_below="@id/github"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#0000FF "/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/igithub"
        android:layout_marginTop="100dp"
        android:textColor="#000000   "
        android:layout_centerHorizontal="true"
         android:layout_marginRight="20dp"
        android:text="Copyright 2019 All Rights are Reserved.  "
        android:textSize="15dp"
        android:textStyle="italic" />


</RelativeLayout>
